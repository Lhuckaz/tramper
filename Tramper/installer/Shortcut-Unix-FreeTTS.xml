<?xml version="1.0" encoding="iso-8859-1" standalone="yes" ?>
<shortcuts>

  <skipIfNotSupported/>
  <programGroup defaultName="Tramper" location="applications"/>

   <shortcut
     name="Free Tramper"
     target="$JAVA_HOME/bin/java"
     commandLine="-Xmx512m -jar lib/Tramper.jar"
     workingDirectory="$INSTALL_PATH"
     description="This starts the free and portable version of Tramper"
     iconFile="$INSTALL_PATH/Tramper.png"
     iconIndex="0"
     initialState="normal"
     programGroup="yes"
     desktop="yes"
     applications="no"
     startMenu="no"
     startup="no"
     type="Application"
     encoding="UTF-8"
     terminal="false"
     KdeSubstUID="false">
     
     <createForPack name="Audio browser"/>
   </shortcut>
   
  <shortcut
    name="Uninstall Tramper"
    target="$JAVA_HOME/bin/java"
    commandLine="-jar Uninstaller/uninstaller.jar"
    workingDirectory="$INSTALL_PATH"
    description="This uninstall Tramper"
    iconFile="$INSTALL_PATH/Tramper-uninstall.png"
    iconIndex="0"
	initialState="normal"
    programGroup="yes"
    desktop="no"
    applications="no"
    startMenu="no"
    startup="no"
	encoding="UTF-8"
	terminal="false"
	deSubstUID="false">

    <createForPack name="Audio browser"/>
  </shortcut>
