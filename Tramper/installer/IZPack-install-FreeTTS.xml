<?xml version="1.0" encoding="iso-8859-1" standalone="yes" ?><!-- 
    A sample installation file.
    Use it as a base for your own installers :-)
    To compile it :
    - go in the bin directory where you installed IzPack
    - call "compile ../sample/install.xml -b ../sample"
-->
<installation version="1.0">   <info>
        <appname>Tramper</appname>
        <appversion>1.0</appversion>
        <authors>
            <author name="Paul-Emile Veuve" email="peveuve@gmail.com"/>
        </authors>
        <url>http://code.google.com/p/tramper/</url>        <javaversion>1.6</javaversion>
    </info>
    <!-- 
        The gui preferences indication.
        Sets the installer window to 640x480. It will not be able to change the size.
    -->
    <guiprefs width="640" height="480" resizable="no">
    	<modifier key="langDisplayType" value="native"/>
    </guiprefs>
    <!-- 
        The locale section.
        Asks here to include the English and French langpacks.
    -->
    <locale>
        <langpack iso3="eng"/>
        <langpack iso3="fra"/>
    </locale>
    <!-- 
        The resources section.
        The ids must be these ones if you want to use the LicencePanel and/or the InfoPanel.
    -->
    <resources>
        <res id="LicencePanel.licence" src="installer/Licence.txt"/>
        <res id="InfoPanel.info" src="installer/Readme.txt"/>        <res id="shortcutSpec.xml" src="installer/Shortcut-Windows-FreeTTS.xml"/>		<res id="Unix_shortcutSpec.xml" src="installer/Shortcut-Unix-FreeTTS.xml"/>
    </resources>
    <!-- 
        The panels section.
        We indicate here which panels we want to use. The order will be respected.
    -->
    <panels>
    <!-- 
        <panel classname="HelloPanel"/>
         -->
        <panel classname="InfoPanel"/>
        <panel classname="LicencePanel"/>
        <panel classname="TargetPanel"/> 
        <!-- 
        <panel classname="PacksPanel"/>
         -->
        <panel classname="InstallPanel"/>        <panel classname="ShortcutPanel"/>
        <panel classname="FinishPanel"/>
    </panels>
    <!-- 
        The packs section.
        We specify here our packs.
    -->
    <packs>
        <pack name="Audio browser" required="yes">
            <description>The audio media browser</description>            <file src="sources/speech.properties" targetdir="$USER_HOME"/>
            <file src="soundbank.gm" targetdir="$INSTALL_PATH"/>
            <file src="GUIConfig.properties" targetdir="$INSTALL_PATH"/>
            <file src="sphinx-recognizer.config.xml" targetdir="$INSTALL_PATH"/>
            <file src="installer/Readme.txt" targetdir="$INSTALL_PATH"/>
            <file src="installer/Licence.txt" targetdir="$INSTALL_PATH"/>
            <file src="installer/Tramper.ico" os="windows" targetdir="$INSTALL_PATH"/>
            <file src="installer/Tramper.png" os="unix" targetdir="$INSTALL_PATH"/>
            <file src="installer/Tramper-uninstall.ico" os="windows" targetdir="$INSTALL_PATH"/>
            <file src="installer/Tramper-uninstall.png" os="unix" targetdir="$INSTALL_PATH"/>
            <file src="installer/Tramper.jar" targetdir="$INSTALL_PATH/lib"/>            <fileset dir="lib" targetdir="$INSTALL_PATH/lib">
	            <include name="*.jar"/>
            </fileset>
            <fileset dir="lib/windows" os="windows" targetdir="$INSTALL_PATH/lib/windows">
            	<exclude name="**/cgjsapi*.*"/>
            </fileset>
            <fileset dir="lib/linux" os="unix" targetdir="$INSTALL_PATH/lib/linux"/>
            <fileset dir="lib/mac" os="mac" targetdir="$INSTALL_PATH/lib/mac"/>
        </pack>
    </packs>
        <!-- for windows shortcuts -->    <native type="izpack" name="ShellLink.dll"/>    
</installation>
